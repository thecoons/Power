#:kivy 1.0.9

<LoginClientScreen>
    BoxLayout:
        id: layout
        orientation: 'vertical'
        TextInput:
            id: user_pseudo
            text: 'Pseudo'
        TextInput:
            id: user_password
            text: 'Password'
        Button:
            id: login
            text: 'Connect'
            on_press: root.on_login_call(self,pseudo=user_pseudo, password=user_password)

<HearthDeepClientScreen>
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: layout
            orientation: 'horizontal'
            Button:
                id: send
                text: 'Send Logs'
                on_press: root.on_send_call(self)
            Button:
                id: logconfig
                text: 'Logs Config'
                on_press: root.show_config()

        Label:
            text: root.message
<ConfigDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Select"
                on_release: root.config(filechooser.path, filechooser.selection), root.cancel()

<HearthClientAlert>:
    Label:
        id: messenger
        text: 'That work !!'
