#:kivy 1.0.9

<LoginClientScreen>
    BoxLayout:
        id: layout
        orientation: 'vertical'
        TextInput:
            id: user_pseudo
            text: 'Pseudo'
        TextInput:
            id: user_password
            text: 'Password'
        Button:
            id: login
            text: 'Connect'
            on_press: root.on_login_call(self,pseudo=user_pseudo, password=user_password)

<HearthDeepClientScreen>
    BoxLayout:
        id: layout
        orientation: 'horizontal'
        Button:
            id: send
            text: 'Send Logs'
            on_press: root.on_send_call(self)
        Button:
            id: logconfig
            text: 'Logs Config'
